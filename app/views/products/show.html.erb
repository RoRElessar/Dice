<h1 align="center"><%= @product.title %></h1>
<div>
  <%= image_tag @product.product_image_url(:small) %>
</div>

<div>
  <%= @product.description %>
</div>
<br>
<div>
  <%= link_to @product.category.title, '#' %>
</div>
<br>
<div>
  Цена: <b> <%= number_to_currency(@product.price, locale: :en) %> </b>
</div>
<br>
<div>
  <%= button_to 'Купить', line_items_path(product_id: @product) %>
</div>