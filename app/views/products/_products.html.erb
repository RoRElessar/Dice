<% @products.each do |product| %>
  <div class="col-lg-4">
    <div class="product">
        <div>
          <p> <%= link_to product.title, product  %> </p>
          <p> <%= link_to (image_tag product.product_image_url(:small)), product if product.product_image? %> </p>
          <p> <%= link_to product.category.title, '#' %> </p>
          <p> Цена: <b> <%= number_to_currency(product.price, locale: :en) %> </b> </p>
          <p> <%= button_to 'Купить', line_items_path(product_id: product), class: 'btn btn-default' %> </p>
        </div>
    </div>
  </div>
<% end %>
